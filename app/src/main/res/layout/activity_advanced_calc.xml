<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".advanced_calc">

    <HorizontalScrollView
        android:id="@+id/hss1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/display"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ellipsize="start"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </HorizontalScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:gravity="center"
        android:orientation="vertical"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hss1">

        <Button
            android:id="@+id/id_bksp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="Bksp"
            android:layout_gravity="fill"
            style="@style/ButtonStyleColor"/>

        <Button
            android:id="@+id/id_clear"
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            style="@style/ButtonStyleColor" />

        <Button
            android:id="@+id/id_change_sign"
            android:text="Â±"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            style="@style/ButtonStyleColor"
            />

        <Button
            android:id="@+id/sin"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="sin"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/cos"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="cos"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/tan"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="tan"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/ln"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:text="ln"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/sqrt"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="sqrt"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/xsquare"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="x^2"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/xpowy"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="x^y"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/log"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:text="x^y"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_digit_7"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="7"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_digit_8"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="8"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_digit_9"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="9"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_divide"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:text="/"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_digit_4"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="4"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/id_digit_5"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="5"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/id_digit_6"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="6"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_multiply"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:text="*"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/id_digit_1"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="1"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/id_digit_2"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="2"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_digit_3"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="3"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_minus"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:text="-"
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_digit_0"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="0"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/id_dot"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="."
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/id_equals"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="="
            android:layout_gravity="fill"/>


        <Button
            android:id="@+id/id_plus"
            style="@style/ButtonStyleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:text="+"
            android:layout_gravity="fill"/>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

